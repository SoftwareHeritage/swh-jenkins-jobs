// Whether the package is publishable
def crate_is_ok = false
// Whether we accept to publish
def publish_ok = not params.dry_run

pipeline {
  {% filter indent(width=2) %}
    {%- include 'includes/agent-docker.groovy.j2' -%}
  {% endfilter %}

  stages {
    stage('Run tests') {
      when {
        expression { return !params.SKIP_TESTS }
        beforeAgent true
      }
      agent none
      steps {
        build(
          job: '/{{name}}/rust-gitlab-builds',
          parameters: [
            string(name: 'REVISION', value: params.GIT_TAG),
          ],
          propagate: !params.IGNORE_TESTS,
        )
      }
    }

    stage('Checkout') {
      steps {
        checkout([
          $class: 'GitSCM',
          userRemoteConfigs: [[
            name:'origin', url: '{{gitlab_url}}/{{gitlab_project_name}}.git',
            refspec: '+refs/tags/*:refs/remotes/origin/tags*'
          ]],
          branches: [[
            name: "${params.GIT_TAG}"
          ]],
          extensions: [[$class: 'CloneOption', honorRefspec: true]],
          doGenerateSubmoduleConfigurations: false,
          extensions: [],
          gitTool: 'Default',
          submoduleCfg: [],
        ])
      }
    }

    stage('(DryRun) Publish - Checks cargo package step is ok') {
      when {
        expression {
          LASTV=sh(returnStdout: true,
                   script:"cargo publish -p {{name}} --dry-run | awk '/Uploading/{print \$3}'").trim()
          return LASTV != params.GIT_TAG
        }
      }
      steps {
        script {
          crate_is_ok = true
        }
      }
    }

    stage('Publish') {
      when {
        // The package is crates compliant so publishable
        expression { crate_is_ok }
        // and we are ok to publish
        expression { publish_ok }
      }
      steps {
        // Then we are go to publish the crates
        withCredentials([
          string(credentialsId: 'swhmirror-crates-api-token',
                 variable: 'CARGO_REGISTRY_TOKEN')]) {
          sh "cargo publish -p {{name}}"
        }
      }
    }
  }
  post {
    cleanup {
      cleanWs()
    }
  }
}
